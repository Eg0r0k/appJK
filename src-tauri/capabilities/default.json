{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "clipboard-manager:allow-write-text",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.tauri.app"
        }
      ],
      "deny": [
        {
          "url": "https://private.tauri.app"
        }
      ]
    },
    "store:default",
    "fs:default",
    "fs:allow-write",
    "fs:allow-write-file",
    {
      "identifier": "fs:allow-exists",
      "allow": [
       
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    "dialog:default"
  ]
}